---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";

const posts = await getCollection("blog");
---

<Layout title="Blog">
  <h1>Blog page</h1>

  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`blog/${post.data.slug}`}>{post.data.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
