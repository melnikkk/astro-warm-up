---
interface Props {
  name: string;
}

const { name } = Astro.props;

const pokemonDetails = await fetch(
  `https://pokeapi.co/api/v2/pokemon/${name}`,
).then((res) => res.json());
---

<div class="mx-auto text-center flex justify-center flex-col items-center">
  <a transition:name={`${name}-element`} href={`/pokemon/${name}`}>
    <img
      class="size-48"
      src={pokemonDetails.sprites.front_default}
      alt={name}
    />
    <p>{name}</p>
  </a>
</div>
