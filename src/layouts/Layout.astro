---
interface Props {
  title: string;
}

const { title } = Astro.props;

const pageTitle = `Astro Warm Up | ${title}`;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{pageTitle}</title>
  </head>
  <body>
    <header>
      <nav>
        <ul class="flex gap-4 justify-center">
          <li
            class="hover:text-red-400 hover:underline ease-in-out duration-300 transition-all"
          >
            <a href="/">Home</a>
          </li>
          <li
            class="hover:text-red-400 hover:underline ease-in-out duration-300 transition-all"
          >
            <a href="/blog">Blog</a>
          </li>
        </ul>
      </nav>
    </header>

    <slot />

    <footer class="text-red-400 text-center">
      <p>Built with love to the Astro</p>
    </footer>
  </body>
</html>
