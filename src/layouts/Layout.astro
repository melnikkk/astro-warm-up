---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Head from "@components/Head.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

const pageTitle = `Astro Warm Up | ${title}`;
---

<!doctype html>
<html lang="en">
  <Head {pageTitle} />
  <body>
    <Header />

    <slot />

    <Footer />
  </body>
</html>
